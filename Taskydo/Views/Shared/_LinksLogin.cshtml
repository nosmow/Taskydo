@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

<ul class="navbar-nav">
    @if(signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hello, @User.Identity.Name</span>
        </li>

        <li class="nav-item">
            <form class="form-check-inline" asp-action="Logout" asp-controller="User">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Registration" asp-controller="User">Registration</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Registration" asp-controller="Login">Login</a>
        </li>
    }
</ul>